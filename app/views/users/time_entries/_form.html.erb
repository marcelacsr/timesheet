<div class="row mt-3">
  <div class="card card-primary col ml-2">
    <div class="card-body" tabindex="0">
      <p><%= Date.today.strftime('%d/%m/%Y') %></p>
      <p>Hora: <%= Time.now.to_s(:time) %></p>

      <%= form_with model: @time_entry, url: users_time_entries_path do |form| %>
<!--        < %= form.hidden_field '[time_entry][date]', value: Date.today %>-->
        <%= form.hidden_field :date, value: Date.today %>
        <div>
          <div class="form-group">
            <%= form.label 'Entrada' %>
            <%= select_time(Time.now, prefix: '[time_entry][first_period_in]') %>
          </div>
          <div class="form-group">
            <%= form.label 'Almoco' %>
            <%= select_time(Time.now, prefix: '[time_entry][first_period_out]') %>
          </div>
          <div class="form-group">
            <%= form.label 'Almoco' %>
            <%= select_time(Time.now, prefix: '[time_entry][second_period_in]') %>
          </div>
          <div class="form-group">
            <%= form.label 'Saida' %>
            <%= select_time(Time.now, prefix: '[time_entry][second_period_out]') %>
          </div>
          <div>
            <%= form.submit 'Enviar', class: 'btn btn-sm btn-outline-success mt-3 d-block' %>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
